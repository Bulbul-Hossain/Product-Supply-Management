@model IEnumerable<ProductSupplyManagement.Models.Inventory>
@{
    ViewBag.Title = "Inventories";
}

<div class="row">
    <div class="col s12">
        <div class="z-depth-3 rounded_corner" style="padding:10px; margin-top:10px;">
            <h3 style="margin-top:3px;margin-bottom:3px;" class="teal-text">Inventory List of @ViewBag.CurrentProduct</h3>
           
            <table class="table bordered">
                <thead class="red lighten-3">
                    <tr>
                        <th>Date</th>
                        
                        <th>Supplier</th>
                        <th>Lot No</th>
                        <th>Quantity</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var inventory in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x=> inventory.Date)</td>
                            <td>@Html.DisplayFor(x => inventory.Supplier.SupplierCompany)</td>
                            <td>@Html.DisplayFor(x => inventory.LotNo)</td>
                            <td>@Html.DisplayFor(x=> inventory.LotNo)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="right-align">
                <ul class="pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="waves-effect">
                            <a href="@Url.Action("Inventories", "Product", new {id=ViewBag.Id, page=ViewBag.CurrentPage-1})"><i class="material-icons">chevron_left</i></a>
                        </li>
                    }
                    @for (var i = 1; i <= ViewBag.TotalPages; i++)
                    {

                        if (i != ViewBag.CurrentPage)
                        {
                            <li class="waves-effect">
                                @Html.ActionLink(i.ToString(), "Inventories", "Product", new { id = ViewBag.Id, page = i }, new { })
                            </li>
                        }
                        else
                        {
                            <li class="waves-effect active">
                                <a href="#!">@i</a>
                            </li>
                        }
                    }
                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="waves-effect">
                            <a href="@Url.Action("Inventories", "Product", new {id=ViewBag.Id, page=ViewBag.CurrentPage+1})"><i class="material-icons">chevron_right</i></a>
                        </li>
                    }

                </ul>
            </div>
        </div>
    </div>
</div>


