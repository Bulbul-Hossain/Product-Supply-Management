@model ProductSupplyManagement.ViewModels.UserModel

@{
    ViewBag.Title = "Register";
}

<div class="section"></div>
<main>
    <center>



        <h5 class="indigo-text">Register your account</h5>


        <div class="container">
            <div class="z-depth-1 grey lighten-4 row" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE;">

                @using (Html.BeginForm())
                {
                    <div class='row'>
                        <div class='col s12'>
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            @Html.TextBoxFor(x => x.Username, new { @class = "validate" })
                            @Html.LabelFor(x => x.Username)
                            @Html.ValidationMessageFor(x => x.Username, "", new { @class = "helper-text red-text" })
                        </div>
                    </div>

                    <div class='row'>
                        <div class='input-field col s12'>
                            @Html.TextBoxFor(x => x.Password, new { @class = "validate", type = "password" })
                            @Html.LabelFor(x => x.Password)
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "helper-text red-text" })
                        </div>
                    </div>

                    <br />
                    <center>
                        <div class='row'>
                            <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>Register</button>
                        </div>
                    </center>
                }
            </div>
        </div>

    </center>

    <div class="section"></div>
    <div class="section"></div>
</main>

@section scripts{
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

